{
  "manifest_version": 3,
  "name": "SpeedBoost",
  "version": "1.0.0",
  "description": "Automatically logs Boost attendance when viewing Canvas courses and opening curriculum sections.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://canyongrove.instructure.com/*",
    "https://boost.lifted-management.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "scripts": ["scripts/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://canyongrove.instructure.com/courses/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://boost.lifted-management.com/*"],
      "js": ["scripts/boost-token-sync.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "ui/options.html",
  "action": {
    "default_title": "SpeedBoost",
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/icons/*.png"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["scripts/boost-page-hook.js"],
      "matches": ["https://boost.lifted-management.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "speedboost@canyongrove.extensions",
      "strict_min_version": "109.0"
    }
  }
}